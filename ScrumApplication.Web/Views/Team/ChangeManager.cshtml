@model ScrumApplication.Entity.Models.Manager

@{
    ViewBag.Title = "Change ScrumMaster";
}

<h2>Change ScrumMaster</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ScrumMaster</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ManagerId)
        <div class="form-group">
            @Html.LabelFor(model => model.Mail, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Mail, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Mail, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" onclick="return confirm('Are you sure you want to resignation from this position?');" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

    <div>
        <a href="@Url.Action("BackToList", "Team")" class="btn btn-default">Back To List</a>
    </div>
