@using ScrumApplication.Entity.Models
@model  AccountViewModel
@{
    ViewBag.Title = "Account Settings";
}


@using (Html.BeginForm("Account", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.HiddenFor(model=>model.User.UserId)
    <div class="form-horizontal">
        <h3>Account Settings</h3>
        <div class="row col-md-8">

            <div class="form-group col-md-6">
                <div class="col-md-10" style="margin-bottom:5px;">
                    @Html.DisplayNameFor(model => model.User.FirstName)
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.User.FirstName, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="col-md-10" style="margin-bottom:5px;">
                    @Html.DisplayNameFor(model => model.User.LastName)
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.User.LastName, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                </div>
            </div>
            <div class="form-group col-md-10">
                @Html.DisplayNameFor(model => model.User.Mail)
                <div class="col-md-10">
                    @Html.EditorFor(model => model.User.Mail, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                </div>
            </div>
            <div class="col-md-10">
                <h4>Change Password</h4>
            </div>
            <div class="form-group col-md-10">
                <div class="col-md-10" style="margin-bottom:5px;">
                    @Html.DisplayNameFor(model => model.CurrentPassword)
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CurrentPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CurrentPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-10">
                <div class="col-md-10" style="margin-bottom:5px;">
                    @Html.DisplayNameFor(model => model.NewPassword)
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-md-10">
                <div class="col-md-10" style="margin-bottom:5px;">
                    @Html.DisplayNameFor(model => model.ConfirmNewPassword)
                </div>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ConfirmNewPassword, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ConfirmNewPassword, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
        <div class="form-group">

        </div>
    </div>
}