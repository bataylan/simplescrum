@using ScrumApplication.DAL.Repositories;
@model ScrumApplication.Entity.Models.Sprint

@{
    ViewBag.Title = "EditSprint";
}

<h2>EditSprint</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Sprint</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.SprintId)

    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DefaultTime, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DefaultTime, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DefaultTime, "", new { @class = "text-danger" })
        </div>
    </div>
    @if (TeamRepository.IsSprintManager(Model.SprintId))
    {
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    }

</div>
}

    <div>
        <a href="@Url.Action("BackToList", "Sprint", new { id = Model.ProjectId }, Request.Url.Scheme)" style="margin-top:20px;" class="btn btn-default">Back To List</a>
    </div>
