@using ScrumApplication.DAL.Repositories
@model ScrumApplication.Entity.Models.Team

@{
    ViewBag.Title = "View";
}

<h2>View</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="row">
    <div class="col-sm-8">
        <h4>Team</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.TeamId)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div>
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @if (TeamRepository.IsTeamManager(Model.TeamId))
                {
                    <input type="submit" value="Save" class="btn btn-default" />
                    <a href="@Url.Action("AddUser", "Team", new { id = Model.TeamId })" class="btn btn-default">Add User</a>
                    <a href="@Url.Action("ChangeManager", "Team", new { id = Model.TeamId })" class="btn btn-default">Change ScrumMaster</a>
                }
            </div>
        </div>
    </div>
    <div class="col-sm-4">
        <h4>Team Members</h4>
        <table class="table">
            <tr>
                <th>Name</th>
                <th>Mail</th>
            </tr>
            @foreach (var user in Model.Members.ToList())
            {
                <tr>
                    <td style="margin-left:10px; margin-top:10px;">
                        @user.Name
                    </td>
                    <td style="">
                        @user.Mail
                    </td>
                </tr>
            }
        </table>
        <table class="table">
            <tr>
                <th>ScrumMaster Name</th>
                <th>Mail</th>
            </tr>
            <tr>
                <td>@Model.Manager.Name</td>
                <td>@Model.Manager.Mail</td>
            </tr>
        </table>
        <div style="margin-top:20px">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.TeamId)
            <div>
            </div>
        </div>
    </div>
</div>
    
}

<div>
    <a href="@Url.Action("BackToList", "Team")" class="btn btn-default">Back To List</a>
</div>
